{
  "name": "obsidian-format-with-prettier",
  "version": "0.6.0",
  "description": "Format files in your Obsidian vault using Prettier.",
  "main": "main.js",
  "scripts": {
    "prepare": "is-ci || husky install",
    "dev": "node esbuild.config.mjs",
    "lint": "eslint .",
    "test": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "changelog": "conventional-changelog --config .changelogrc.mjs -i CHANGELOG.md -s",
    "version": "node version-bump.mjs && npm run changelog && git add ."
  },
  "keywords": [
    "Obsidian plugin",
    "Prettier"
  ],
  "author": "Alex Gavrusev <alex@gavrusev.dev>",
  "license": "MIT",
  "dependencies": {
    "obsidian": "1.7.2",
    "prettier": "3.3.3",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.16.0",
    "@types/common-tags": "1.8.4",
    "@types/node": "^22.4.0",
    "@typescript-eslint/eslint-plugin": "8.17.0",
    "@typescript-eslint/parser": "8.17.0",
    "builtin-modules": "4.0.0",
    "common-tags": "1.8.2",
    "conventional-changelog-cli": "5.0.0",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "esbuild": "0.24.0",
    "eslint": "9.16.0",
    "husky": "^9.0.11",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.10",
    "typescript": "5.7.2",
    "typescript-eslint": "8.17.0",
    "vitest": "2.1.8"
  }
}
